<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondo"
    android:padding="16dp"
    tools:context="com.example.kelly.appgym.MainActivity">

    <TextView
        android:id="@+id/textBienvenida"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bienvenido a App Gym"
        android:textAlignment="center"
        android:textSize="25dp"
        android:textColor="@color/colorBlack"
        android:layout_marginTop="40dp"/>

    <Button
        android:id="@+id/buttonInicioSesion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorSuccess"
        android:text="Iniciar Sesión"
        android:textColor="@color/colorWhite"
        android:textAlignment="center"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/textSinCuenta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="¿No tiene una cuenta? "
        android:textAlignment="center"
        android:textSize="16dp"
        android:textColor="@color/colorBlack"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/buttonRegistro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorWhite"
        android:text="Registrarse"
        android:textColor="@color/colorBlack"
        android:textAlignment="center"
        android:layout_marginTop="30dp"/>

</LinearLayout>
