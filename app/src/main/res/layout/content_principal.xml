<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.kelly.appgym.PrincipalActivity"
    tools:showIn="@layout/app_bar_principal"
    android:padding="20dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_pagina_principal_bienvenida"
        android:textAllCaps="true"
        android:textColor="@color/colorBlack"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textAlignment="center"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/texto_pagina_principal_cuerpo"
        android:textAllCaps="true"
        android:textColor="@color/colorBlack"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/buttonIrAMusculos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ir a la tabla Musculos"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/colorWhite"
        android:textColor="@color/colorBlack"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/buttonIrAEjercicios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ir a la tabla Ejercicios"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/colorWhite"
        android:textColor="@color/colorBlack"
        android:textAlignment="center"/>
</LinearLayout>
